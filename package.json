{
  "name": "cliq",
  "version": "0.9.1",
  "description": "Unofficial client for Zoho Cliq",
  "main": "./src/main.js",
  "homepage": "https://github.com/iyorozuya/zoho-cliq-desktop",
  "scripts": {
    "lint": "eslint -c .eslintrc.js ./src",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/iyorozuya/zoho-cliq-desktop",
  "author": {
    "name": "Akshay",
    "email": "iyaksha@tutanota.com",
    "url": "https://github.com/iyorozuya"
  },
  "keywords": [
    "Zoho Cliq",
    "chat",
    "desktop"
  ],
  "build": {
    "appId": "com.iyorozuya.cliq",
    "productName": "Cliq",
    "directories": {
      "output": "out"
    },
    "files": [
      "./src/**/*",
      "./node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "icon": "./src/assets/icons",
      "category": "Office",
      "description": "Business and Team chat",
      "synopsis": "Chat and communication",
      "executableName": "cliq",
      "desktop": {
        "Name": "Cliq",
        "StartupNotify": "true",
        "Comment": "Zoho Cliq-The smart way to work",
        "StartupWMClass": "cliq"
      },
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^18.1.0",
    "electron-builder": "^22.14.5",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0"
  },
  "dependencies": {
    "electron-store": "^8.0.1",
    "ws": "^8.4.2"
  }
}
